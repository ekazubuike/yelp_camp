<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Camp Catalogue!</h1>
            <p>Check out our selection of campgrounds </p>
            <p>
                <a class="btn btn-primary btn-lg" href="/grounds/new">Submit a new campground!</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% grounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camp.image %>">
                    <div class="caption">
                        <h4><%= camp.name %></h4>
                    </div>
                    <p>
                        <a href="/grounds/<%= camp._id %>" class="btn btn-primary">Check it out!</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>    
</div>
<% include ../partials/footer %>