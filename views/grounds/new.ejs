<% include ../partials/header %>


<div class="row">
    <h1 style="text-align: center;">Create a new campground:</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/grounds" method="POST">
            <div class="form-group">
                <label for="name">Camp Name</label>
                <input class="form-control" type="text" id="name" name="camp[name]" placeholder="e.g. Hebgen Basin">
            </div>
            <div class="form-group">
                <label for="price">Nightly Price</label>
                <input class="form-control" type="number" id="price" name="camp[price]" placeholder="Price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="location">Camp Location</label>
                <input class="form-control" type="text" id="location" name="camp[location]" placeholder="e.g. Yellowstone National Park, MT" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input class="form-control" type="text" id="image" name="camp[image]" placeholder="Image URL">
            </div>
            <div class="form-group">
                <label for="description">Camp Description</label>
                <textarea class="form-control" id="description" name="camp[description]" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/grounds"><< Back</a>
    </div>
</div>


<% include ../partials/footer %>