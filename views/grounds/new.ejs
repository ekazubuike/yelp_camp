<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new campground:</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/grounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" placeholder="Camp Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" placeholder="Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" placeholder="Image">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="camp[description]" placeholder="Description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/grounds"><< Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>