<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new comment to <%= camp.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/grounds/<%= camp._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="Comment content..."></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/grounds"><< Back</a>
        </div>
        
    </div>
</div>

